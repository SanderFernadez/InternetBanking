@using InternetBanking.Core.Application.ViewModels.Payments
@model SavePaymentViewModel

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">Pago Expreso</h5>
        </div>
        <div class="modal-body">
            <form method="post" action="@Url.Action("ProcesarPagoExpreso", "Payments")">
                <div class="mb-3">
                    <label asp-for="DestinationAccount" class="form-label">Número de Cuenta Destino</label>
                    <input asp-for="DestinationAccount" class="form-control" placeholder="Ingrese el número de cuenta destino" />
                    <span asp-validation-for="DestinationAccount" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="AmountPaid" class="form-label">Monto</label>
                    <input asp-for="AmountPaid" class="form-control" placeholder="Ingrese el monto" type="number" step="0.01" />
                    <span asp-validation-for="AmountPaid" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="TransactionType" class="form-label">Cuenta de Origen</label>
                    <select asp-for="TransactionType" class="form-select">
                        <option selected>Seleccione una cuenta</option>
                        <!-- Opciones de cuentas cargadas desde el controlador -->
                    </select>
                    <span asp-validation-for="TransactionType" class="text-danger"></span>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Realizar Pago</button>
                </div>
            </form>
        </div>
    </div>
</div>
