@using InternetBanking.Core.Application.ViewModels.Users
@using InternetBanking.Core.Application.Enums
@model SaveUserViewModel

@{
    bool isEditing = !string.IsNullOrEmpty(Model.Id);
    ViewData["Title"] = isEditing ? "Editar Usuario" : "Crear Usuario";
}

<div class="container-fluid d-flex align-items-center justify-content-center vh-100">
    <div class="card shadow-lg border-0 rounded w-50">
        <div class="card-header bg-primary text-white">
            <h2 class="text-center mb-0">@ViewData["Title"]</h2>
        </div>
        <div class="card-body">
            <form method="post" asp-controller="User" asp-action="@(isEditing ? "EditUser" : "CreateUser")">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="IsVerified" />

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="FirstName" class="form-label">Nombre</label>
                        <input asp-for="FirstName" class="form-control shadow-sm" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="LastName" class="form-label">Apellido</label>
                        <input asp-for="LastName" class="form-control shadow-sm" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                </div>

                <!-- Más campos del formulario aquí -->

                <div class="mb-3">
                    <label class="form-label">Rol</label>
                    <select asp-for="Roles" class="form-select shadow-sm" id="roleSelect">
                        <option value="@Roles.Client">Cliente</option>
                        <option value="@Roles.Admin">Administrador</option>
                    </select>
                </div>

                <div class="mb-3" id="initialAmountField" style="display: none;">
                    <label asp-for="InitialAmount" class="form-label">Monto Inicial</label>
                    <input asp-for="InitialAmount" class="form-control shadow-sm" />
                    <span asp-validation-for="InitialAmount" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-success shadow-sm me-2">@ViewData["Title"]</button>
                    <a asp-controller="User" asp-action="LoadUsers" class="btn btn-secondary shadow-sm">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const roleSelect = document.getElementById("roleSelect");
            const initialAmountField = document.getElementById("initialAmountField");

            function toggleInitialAmountField() {
                if (roleSelect.value === "@Roles.Client") {
                    initialAmountField.style.display = "block";
                } else {
                    initialAmountField.style.display = "none";
                }
            }

            roleSelect.addEventListener("change", toggleInitialAmountField);
            toggleInitialAmountField();
        });
    </script>
}

<style>
    .card {
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.15);
        margin-bottom: 0;
    }

    .container-fluid {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
    }
</style>
